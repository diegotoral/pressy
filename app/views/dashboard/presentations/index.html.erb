<div class="hero">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Presentations
      </h1>
      <h2 class="subtitle is-4 is-muted">
        Preview, create and edit your amazing presentations
      </h2>
    </div>
  </div>
</div>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <div class="column is-3">
        <div class="card">
          <div class="card-image">
            <a href="">
              <figure class="image is-4by3">
                <%= image_tag 'new-presentation-cover.png' %>
              </figure>
            </a>
          </div>
          <div class="card-content has-text-centered">
            <a href="#" class="button is-info is-small is-fullwidth">
              <%= t '.new' %>
            </a>
          </div>
        </div>
      </div>

      <%= render @presentations, as: :presentation %>
    </div>
  </div>
</section>
